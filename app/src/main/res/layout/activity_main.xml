<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:color/transparent"
            android:id="@+id/addReminder" android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="15dp" android:layout_marginEnd="18dp"
            app:backgroundTint="@color/colorPrimary"/>
</RelativeLayout>